    <Version>2.1.0</Version>
    <PackageId>Ao.SavableConfig.Binder</PackageId>
    <Authors>Ao.SavableConfig.Binder</Authors>
    <Company>Ao.SavableConfig.Binder</Company>
    <Product>Ao.SavableConfig.Binder</Product>
  </PropertyGroup>

  <ItemGroup>
